<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="商店名："
                    android:id="@+id/tv_store_name"
                    android:textSize="18sp"
                    android:gravity="end" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="请输入商店名"
                    android:id="@+id/et_store_name" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_phone"
                android:layout_below="@id/ll_store_name">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_phone"
                    android:text="手机号："
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="请输入手机号"
                    android:id="@+id/et_phone" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_verification_code"
                android:layout_below="@id/ll_phone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_verification_code"
                    android:text="验证码："
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_weight="1.28" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="请输入验证码"
                    android:id="@+id/et_verification_code" />

                <Button
                    android:text="获取验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_get_code" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_password"
                android:layout_below="@id/ll_verification_code">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="密码："
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_weight="2" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="请输入密码"
                    android:id="@+id/et_password"
                    android:inputType="numberPassword" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_confirm_password"
                android:layout_below="@id/ll_password">

                <TextView
                    android:text="确认密码："
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_confirm_password"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_weight="2" />

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="请确认密码"
                    android:inputType="textWebPassword" />
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:text="确认"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sure"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="96dp" />

    </RelativeLayout>

</RelativeLayout>

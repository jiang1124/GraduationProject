<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppingsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:label="首页">
        </activity>
        <activity android:name=".activity.ProductActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.LoginActivity"
            android:label="登录/注册">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:launchMode="singleTask"/>

                <category android:name="android.intent.category.LAUNCHER"
                    android:launchMode="singleTask" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SearchActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.MyOrderActivity"
            android:launchMode="singleTask"
            android:label="我的订单" />
        <activity
            android:name=".activity.MyCollectionActivity"
            android:launchMode="singleTask"
            android:label="我的收藏" />
        <activity
            android:name=".activity.MyHistoryActivity"
            android:launchMode="singleTask"
            android:label="我的足迹" />
        <activity
            android:name=".activity.MyAddressActivity"
            android:launchMode="singleTask"
            android:label="地址信息" />
        <activity
            android:name=".activity.EditRecipientActivity"
            android:launchMode="singleTask"
            android:label="编辑" />
        <activity android:name=".activity.PayActivity"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/person_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.example.shoppingsystem.View.CircleImageView
                android:id="@+id/iv_my_head"
                android:layout_width="250sp"
                android:layout_height="250sp"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:layout_gravity="left"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">
                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未登陆"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_my_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_my_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:gravity="center"
            android:textSize="40sp"/>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#ddf"/>
        <TextView
            android:id="@+id/tv_my_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:gravity="center"
            android:textSize="40sp"/>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#ddf"/>
        <TextView
            android:id="@+id/tv_my_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的足迹"
            android:gravity="center"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/tv_my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:gravity="center"
            android:textSize="40sp"/>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#ddf"/>

    </LinearLayout>

</LinearLayout>
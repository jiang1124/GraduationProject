<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_right_above"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tv_recipient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/v_line1"
                        android:layout_width="2dip"
                        android:layout_height="fill_parent"
                        android:background="#EBF0F1"
                        android:layout_toRightOf="@id/tv_recipient_name"
                        />

                    <TextView
                        android:id="@+id/tv_recipient_phone"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/v_line1"
                        android:text="18856332707"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/v_line2"
                        android:layout_width="3dip"
                        android:layout_height="fill_parent"
                        android:background="#fff"
                        android:layout_toRightOf="@id/tv_recipient_phone"
                        />

                    <TextView
                        android:id="@+id/tv_address_state"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/v_line2"
                        android:text="默认"
                        android:textColor="@color/liji_material_red_500"
                        android:textSize="16sp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_recipient_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rl_right_above"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="安徽省宣城市宣州区 合工大"
                    android:textColor="#333333"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:background="#EBF0F1"
            android:layout_toRightOf="@id/tv_recipient_name"
            />

        <TextView
            android:id="@+id/tv_recipient_edit"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:text="编辑"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#999999"
        android:layout_toRightOf="@id/tv_recipient_name"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="订单号"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_order_number"
                android:textSize="14sp"
                android:layout_weight="2" />

            <TextView
                android:text="状态"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_state_order"
                android:textSize="16sp"
                android:textColor="@color/color_ff4b13"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="姓名"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_name_order"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <TextView
                    android:text="电话"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_phone_order"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <TextView
                    android:text="时间"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_time_order"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/color_text_02" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="地址"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_address_order"
                    android:layout_weight="0.52"
                    android:textSize="16sp" />

                <TextView
                    android:text="价格"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_price_order"
                    android:layout_weight="0.25"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>